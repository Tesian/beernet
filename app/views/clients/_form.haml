= form_for(@client) do |f|
  - if @client.errors.any?
    #error_explanation
      %h2
        = pluralize(@client.errors.count, "error")
        prohibited this client from being saved:
      %ul
        - @client.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :street
    %br/
    = f.text_field :street
  .field
    = f.label :zip
    %br/
    = f.text_field :zip
  .field
    = f.label :town
    %br/
    = f.text_field :town
  .actions
    = f.submit
