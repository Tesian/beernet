= form_for [@project, @box], :html => { :class => 'form-horizontal' } do |f|
  - if @box.errors.any?
    #error_explanation
      %h2
        = pluralize(@box.errors.count, "error")
        prohibited this box from being saved:
      %ul
        - @box.errors.full_messages.each do |msg|
          %li= msg
  .control-group
    = f.label :login
    .controls
      = f.text_field :username
  .control-group
    = f.label :password
    .controls
      = f.password_field :password
  .form-actions
    = f.submit nil, :class => "btn btn-primary"
