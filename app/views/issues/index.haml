= render 'header'
.page-header
  %h1 Listing issues

%table{ :class => "table table-striped" }
  %thead
    %tr
      %th Title
      %th Description
      %th Labels
      %th Milestone
      %th 
      %th 
      %th 
- @issues.each do |issue|
  %tbody
    %tr
      %td= issue.title
      %td= issue.body
      %td= issue.labels
      %td= issue.milestone
      %td= link_to 'Show', project_issue_path(@project, issue.id), :class => "btn btn-mini"
      %td= link_to 'Edit', edit_project_issue_path(@project, issue.id), :class => "btn btn-mini"
      %td= link_to 'Destroy', project_issue_path(@project, issue.id), :method => :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger"

