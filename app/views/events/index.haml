- @events.each do |event|
  %tr
    %td= event.title
    %td= event.start_time
    %td= event.end_time
    %td= event.all_day
    %td= event.description
    %td= event.where
    %td= link_to 'Show', project_event_path(@project, event.id)
    %td= link_to 'Edit', edit_project_event_path(@project, event.id)
    %td= link_to 'Destroy', project_event_path(@project, event.id), :method => :delete, data: { confirm: 'Are you sure?' }

= link_to 'View Calendar', calendar_project_path(@project)
%br
= link_to 'New Event', new_project_event_path(@project)
