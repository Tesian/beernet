<h1>Listing events</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Starts at</th>
    <th>Ends at</th>
    <th>All day</th>
    <th>Description</th>
    <th>Where</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.title %></td>
    <td><%= event.start_time %></td>
    <td><%= event.end_time %></td>
    <td><%= event.all_day %></td>
    <td><%= event.description %></td>
    <td><%= event.where %></td>
    <td><%= link_to 'Show', project_event_path(@project, event.id) %></td>
    <td><%= link_to 'Edit', edit_project_event_path(@project, event.id) %></td>
    <td><%= link_to 'Destroy', project_event_path(@project, event.id), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to 'View Calendar', calendar_project_path(@project) %>
<br />
<%= link_to 'New Event', new_project_event_path(@project) %>
